<h1>New Student</h1>

<%= form_with model: @student do |form| %>
  <div>
    <% @student.errors.full_messages.each do |message| %>
      <div><%= message %></div>
    <% end %>
  </div>

  <div>
    <%= form.label :first_name %><br>
    <%= form.text_field :first_name %>
    
  <div>
    <%= form.label :last_name %><br>
    <%= form.text_area :last_name %>
  </div>

   <div>
    <%= form.label :email %><br>
    <%= form.text_area :email %>
  </div>

  <div>
    <%= form.submit %>
  </div>
<% end %>